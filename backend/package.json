{
  "name": "toilet-review-system-backend",
  "version": "1.0.0",
  "description": "Backend API for the Toilet Review System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "npx nodemon server.js",
    "dev:setup": "./dev.sh",
    "test": "jest --testPathIgnorePatterns=e2e",
    "test:e2e": "jest e2e",
    "test:all": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --testPathIgnorePatterns=e2e --coverage",
    "test:coverage:all": "jest --coverage",
    "test:qr": "node test-qr.js",

    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "build:watch": "webpack --mode=development --watch",
    "serve": "webpack serve --mode=development",
    "serve:prod": "webpack serve --mode=production",

    "clean": "rm -rf dist",
    "prebuild": "npm run clean",

    "analyze": "webpack --mode=production --analyze",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix"
  },
  "keywords": [
    "toilet",
    "review",
    "system",
    "api",
    "express",
    "mongodb"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "lru-cache": "^11.2.4",
    "node-cache": "^5.1.2",
    "qrcode": "^1.5.4",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.1",
    "nodemon": "^2.0.22",
    "puppeteer": "^21.6.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/jest.config.js",
      "!**/tests/e2e.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 30000
  }
}
