{
  "watch": [
    "server.js",
    "models/",
    "routes/",
    "middleware/",
    "services/"
  ],
  "ext": "js,json",
  "ignore": [
    "node_modules/",
    "tests/",
    "coverage/",
    "*.test.js",
    "*.spec.js"
  ],
  "delay": 500,
  "verbose": true,
  "env": {
    "NODE_ENV": "development"
  },
  "restartable": "rs",
  "colours": true
}
